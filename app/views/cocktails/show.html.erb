<h1> <%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= "#{dose.description.capitalize} - #{dose.ingredient.name.capitalize} - " %> <%= link_to "Delete this dose",
                                                                                              dose_path(dose),
                                                                                              method: :delete,
                                                                                              data: { confirm: "Are you sure?" } %> </p>

<% end %>
<%= link_to "Add doses to this cocktail", new_cocktail_dose_path(@cocktail.id) %>
<%= link_to "Return to cocktails list", cocktails_path %>
