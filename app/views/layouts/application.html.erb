<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar-cocktail">
      <div class="title"><h1>Welcome to Mr. Cocktails!</h1></div>
      <div class="nvb-btns">
        <div class="home-page"><%= link_to "Return to cocktails list", root_path, { class: "btn btn-root"} %></div>
        <div class="new-cocktail"><%= link_to "Create new cocktail", cocktails_new_path, { class: "btn btn-new-cocktail"} %></div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
